<script lang="ts">
  const secretCode = "isex";
  let enteredKeys = "";

  document.addEventListener("keydown", (event) => {
    if (event.key === secretCode[enteredKeys.length]) {
      enteredKeys += event.key;
      if (enteredKeys === secretCode) {
        console.log("Secret code entered! Do something special here.");
        enteredKeys = "";
      }
    } else {
      enteredKeys = event.key;
    }
  });
</script>

